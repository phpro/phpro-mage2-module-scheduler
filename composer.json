{
    "name": "phpro/mage2-module-scheduler",
    "description": "Cron Scheduler for Magento 2",
    "type": "magento2-module",
    "license": "MIT",
    "authors": [
        {
            "name": "PHPro NV",
            "email": "info@phpro.be",
            "homepage": "https://www.phpro.be/"
        }
    ],
    "require": {
        "php": "^8.1",
        "magento/framework": "^103.0",
        "magento/module-backend": "^101.0|^102.0",
        "magento/module-cron": "^100.3",
        "magento/module-ui": "^101.1"
    },
    "require-dev": {
        "magento/magento-coding-standard": "*",
        "phpro/grumphp-shim": "^1.0",
        "phpunit/phpunit": "~9.5.0",
        "vimeo/psalm": "^4.23"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Phpro\\Scheduler\\": ""
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/,../../phpcompatibility/php-compatibility/)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/,../../phpcompatibility/php-compatibility/)"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "ext-gd": "8.1",
            "ext-xsl": "8.1",
            "ext-bcmath": "8.1",
            "ext-pdo_mysql": "8.1",
            "ext-soap": "8.1",
            "ext-zip": "8.1"
        },
        "allow-plugins": {
            "phpro/grumphp-shim": true,
            "magento/composer-dependency-version-audit-plugin": true
        }
    }
}
